{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@multi-steps-wizard": [
        "./src/main.ts"
      ]
    },
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": ["./playground/global.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "playground/**/*.ts",
    "playground/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
